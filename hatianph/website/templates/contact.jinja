{% extends "base.jinja" %}

{% block title %}
Contact
{% endblock title %}
{% block content %}
<form method="POST">
    <h3 align="center">Contact me</h3>
    <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Enter e-mail">
    </div>
    <div class="form-group">
        <label for="message">Message</label>
        <textarea type="text" class="form-control" id="message" rows="3" name="message" placeholder="Enter message"></textarea>
    </div>
</form>


{{ text }}
{% endblock content %}